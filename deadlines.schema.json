{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/se-community/se-datasource/schema.event.json",
    "title": "Deadlines",
    "type": "object",
    "required": [
        "id",
        "type",
        "title"
    ],
    "properties": {
        "id": {
            "description": "The event id",
            "type": "string"
        },
        "type": {
            "description": "The conference type",
            "type": "string",
            "enum": ["conference", "workshop", "symposium"]
        },
        "title": {
            "description": "The event title",
            "type": "string"
        }
    }
}
